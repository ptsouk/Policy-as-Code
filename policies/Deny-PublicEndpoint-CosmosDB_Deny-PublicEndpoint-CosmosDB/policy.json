{
 "properties": {
  "displayName": "Deny-PublicEndpoint-CosmosDB",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy restrict creation of cosmos db accounts with exposed public endpoints",
  "metadata": {
   "category": "Deny-PublicEndpoint"
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.DocumentDB/databaseAccounts"
     },
     {
      "field": "Microsoft.DocumentDB/databaseAccounts/publicNetworkAccess",
      "notequals": "Disabled"
     }
    ]
   },
   "then": {
    "effect": "Deny"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ES/providers/Microsoft.Authorization/policyDefinitions/Deny-PublicEndpoint-CosmosDB",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-PublicEndpoint-CosmosDB"
}