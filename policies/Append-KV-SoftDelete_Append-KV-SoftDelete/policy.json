{
 "properties": {
  "displayName": "Append-KV-SoftDelete",
  "policyType": "Custom",
  "mode": "All",
  "description": "When a Key Vault is created with out soft delete enabled then this will add it.",
  "metadata": {
   "category": "Key Vault"
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "anyOf": [
     {
      "allOf": [
       {
        "field": "type",
        "equals": "Microsoft.KeyVault/vaults"
       },
       {
        "field": "Microsoft.KeyVault/vaults/enableSoftDelete",
        "notEquals": false
       }
      ]
     }
    ]
   },
   "then": {
    "effect": "append",
    "details": [
     {
      "field": "Microsoft.KeyVault/vaults/enableSoftDelete",
      "value": true
     }
    ]
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ES/providers/Microsoft.Authorization/policyDefinitions/Append-KV-SoftDelete",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Append-KV-SoftDelete"
}