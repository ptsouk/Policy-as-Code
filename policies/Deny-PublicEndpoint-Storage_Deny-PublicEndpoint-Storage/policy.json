{
 "properties": {
  "displayName": "Deny-PublicEndpoint-Storage",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy restrict creation of storage accounts with IP Firewall exposed to all public endpoints",
  "metadata": {
   "category": "Deny-PublicEndpoint"
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.Storage/storageAccounts"
     },
     {
      "field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
      "notequals": "Deny"
     }
    ]
   },
   "then": {
    "effect": "Deny"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ES/providers/Microsoft.Authorization/policyDefinitions/Deny-PublicEndpoint-Storage",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-PublicEndpoint-Storage"
}