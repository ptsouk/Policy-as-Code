{
 "properties": {
  "displayName": "Public network access should be disabled for MariaDB",
  "policyType": "Custom",
  "mode": "Indexed",
  "description": "This policy denies the creation of Maria DB accounts with exposed public endpoints",
  "metadata": {
   "version": "1.0.0",
   "category": "SQL",
   "source": "https://github.com/Azure/Enterprise-Scale/",
   "alzCloudEnvironments": [
    "AzureCloud",
    "AzureChinaCloud",
    "AzureUSGovernment"
   ],
   "createdBy": "11c42046-9599-45f1-8003-a2903fd484a8",
   "createdOn": "2022-12-05T16:32:22.8592701Z",
   "updatedBy": "11c42046-9599-45f1-8003-a2903fd484a8",
   "updatedOn": "2022-12-30T13:05:07.9510447Z"
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "Audit",
     "Deny",
     "Disabled"
    ],
    "defaultValue": "Deny"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.DBforMariaDB/servers"
     },
     {
      "field": "Microsoft.DBforMariaDB/servers/publicNetworkAccess",
      "notequals": "Disabled"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ES/providers/Microsoft.Authorization/policyDefinitions/Deny-PublicEndpoint-MariaDB",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-PublicEndpoint-MariaDB"
}